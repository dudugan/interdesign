{
    "manifest_version": 3, 
    "name": "Bookmarklet for Synesthesiacs",
    "description": "Text Colorifyer",
    "version": "1.0", 
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["scripting"], 
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}