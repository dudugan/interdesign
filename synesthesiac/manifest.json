{
    "manifest_version": 3, 
    "name": "Bookmarklet for Synesthesiacs",
    "description": "Text Colorifyer",
    "version": "1.0", 
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["activeTab", "scripting", "storage"], 
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}